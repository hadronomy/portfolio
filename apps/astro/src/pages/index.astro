          <Sparkles client:load>
            <h2 class="text-3xl uppercase tracking-widest">Experience</h2>
          </Sparkles>
        </a>
      </div>
      <div class="w-full h-60 p-4 mt-4 ring-1 rounded-2xl">
        <!-- Experience section -->
      </div>
    </section>
    <hr class="w-full h-2 "/>
    <aside class="w-full h-90 hidden md:flex align-middle justify-center items-center">
      <div class="border-white border-2 w-[33%] h-full"></div>
    </aside>      
  </main>
</MainLayout>
