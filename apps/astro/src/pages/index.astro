---
import '~/styles/global.css';

import Hero from '~/components/HomeHero.astro';
import { Sparkles } from '~/components/react/sparkle';
import MainLayout from '~/layouts/Main.astro';
---

<MainLayout>
  <div class="h-30"></div>
  <main class="flex gap-y-10 flex-col">
    <Hero id="hero" />
    <section>
      <a id="skills" href="#skills">
        <Sparkles client:load>
          <h2 class="text-3xl uppercase tracking-widest">Skills</h2>
        </Sparkles>
      </a>
    </section>
    <section>
      <a id="projects" href="#projects">
        <Sparkles client:load>
          <h2 class="text-3xl uppercase tracking-widest">Projects</h2>
        </Sparkles>
      </a>
    </section>
    <section>
      <a id="experience" href="#experience">
        <Sparkles client:load>
          <h2 class="text-3xl uppercase tracking-widest">Experience</h2>
        </Sparkles>
      </a>  
    </section>      
  </main>
</MainLayout>
