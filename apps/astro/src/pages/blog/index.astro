---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

import BaseHead from '~/components/BaseHead.astro';
import { Card, CardHeader, CardTitle } from '@portfolio/ui/card';
import { SITE_TITLE, SITE_DESCRIPTION } from '~/consts';
import FormattedDate from '~/components/FormattedDate.astro';
import Navbar from '~/components/Navbar.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Navbar />
    <main
      class="grid mx-auto min-h-screen mt-6 w-full max-w-screen-xl grid-cols-[1fr_min(75ch,_calc(100%_-_1.5rem))_1fr] py-8 [&>*]:col-start-2 gap-6 px-6"
    >
      <section class="row-span-1 flex flex-col gap-y-6">
        <ul class="flex flex-col gap-y-6">
          {
            posts.map((post) => {
              const pathname = `/blog/${post.slug}/`;
              return (
                <li>
                  <a href={pathname}>
                    <Card className="">
                      <CardHeader className="flex flex-col">
                        <CardTitle>{post.data.title}</CardTitle>
                        <date>
                          <FormattedDate date={post.data.pubDate} />
                        </date>
                        <Image
                          width={720}
                          height={360}
                          src={post.data.heroImage}
                          alt=""
                          transition:name={`img-${pathname}`}
                        />
                      </CardHeader>
                    </Card>
                  </a>
                </li>
              );
            })
          }
        </ul>
      </section>
    </main>
    <!-- <Footer /> -->
  </body>
</html>
