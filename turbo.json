{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env*.local"],
  "globalEnv": ["NODE_ENV", "VERCEL_URL", "PORT"],
  "tasks": {
    "start": {
      "dependsOn": ["^start", "build"],
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".astro/**", "dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "lint-staged": {
      "dependsOn": ["^lint-staged"]
    }
  }
}
